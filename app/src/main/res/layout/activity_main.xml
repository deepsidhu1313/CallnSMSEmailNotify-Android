<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="SMTP Server"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/smtp_host"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="User"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/username"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Password"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/password"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Sender"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/mail_from"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Receiver"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/mail_to"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:text="Enable TLS"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <CheckBox
                android:id="@+id/enableTLS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="6"
                android:text="" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:text="SMTP Port"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/smtpport"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="5"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:text="Send Scheduled Logs"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <CheckBox
                android:id="@+id/scheduledLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="7"
                android:text="" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:text="Include Call Logs"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <CheckBox
                android:id="@+id/includeCalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="8"
                android:text="" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="9"
                android:text="Include SMS Logs"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <CheckBox
                android:id="@+id/includeSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="9"
                android:text="" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="10"
                android:text="Day"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/day"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="10" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="11"
                android:text="HH"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/hour"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="11" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="12"
                android:text="min"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/min"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="12" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="14"
                android:text="Seconds"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/seconds"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="14" />

            <Space android:layout_row="15" />

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="16"
                android:text="OK"
                android:onClick="on_ok_click"/>

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="16"
                android:text="Cancel"
                android:onClick="on_cancel_click"/>

        </GridLayout>
    </ScrollView>
</RelativeLayout>
